<body class="no-skin">
<div class="page-header">
    <h1>
        信息展示
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            学生管理 &amp; 学生列表
        </small>
        <small style="margin-left: 1000px;">
            <a href="<%=basePath%>toSubjectAddForm.action">新增</a>
        </small>
    </h1>
</div><!-- /.page-header -->
<div class="row">
    <div class="col-xs-12">
        <table id="simple-table" class="table  table-bordered table-hover">
            <thead>
            <tr>
                <th class="hidden-480">序号</th>
                <th class="hidden-480">学科名</th>
                <th class="hidden-480">选修人数</th>
                <th class="hidden-480">平均分</th>
                <th class="hidden-480">修改</th>
                <th class="hidden-480">删除</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <c:forEach items="${subjectVOList}" varStatus="s" var="subject">
                <tr>
                    <td>
                            ${s.index+1}
                    </td>
                    <td>${subject.name}</td>
                    <td >${subject.take_subject_sum}</td>
                    <td >${subject.subject_mark_avg}</td>
                    <td><a href="<%=basePath%>toSubjectUpdateForm.action?sid=${subject.sid}">修改</a></td>
                    <td><a href="<%=basePath%>deleteSubject.action?sid=${subject.sid}">删除</a></td>
                </tr>
            </c:forEach>
            </tbody>
        </table>
    </div><!-- /.span -->
</div>
</body>
